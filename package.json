    "main": "index.js",
    "dependencies": {
        "trsa": "^1.0.0"
    },
    "devDependencies": {
        "@types/node": "^12.6.2",
        "chai": "^4.2.0",
        "expect": "^24.8.0",
        "express": "^4.17.1",
        "ts-loader": "^6.0.4",
        "ts-node": "^8.3.0",
        "typescript": "^3.5.3",
